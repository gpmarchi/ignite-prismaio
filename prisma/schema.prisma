generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Courses {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?
  duration    Int
  teacher_id  String   @unique
  teacher     Teachers @relation(fields: [teacher_id], references: [id])
  created_at  DateTime @default(now())

  @@map("courses")
}

model Modules {
  id          String   @id @default(uuid())
  name        String   @unique
  description String
  created_at  DateTime @default(now())

  @@map("modules")
}

model Teachers {
  id     String   @id @default(uuid())
  name   String   @unique
  course Courses?

  @@map("teachers")
}

model Authors {
  id    String  @id @default(uuid())
  name  String  @unique

  @@map("authors")
}

model Books {
  id        String  @id @default(uuid())
  name      String  @unique
  author_id String  @unique

  @@map("books")
}
